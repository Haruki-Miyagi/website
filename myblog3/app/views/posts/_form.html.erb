

<%= form_for @post, :html => {:multipart => true} do |f| %>
<p>
  <%= f.label :title %>
  <%= f.text_field :title, placeholder: 'enter title' %>
  <% if @post.errors.messages[:title].any? %>
  <span class='message'><%= @post.errors.messages[:title][0] %></span>
  <% end %>
</p>
<p>
  <%= f.label :body %>
  <%= f.text_area :body, placeholder: 'enter body' %>
  <% if @post.errors.messages[:title].any? %>
  <span class='message'><%= @post.errors.messages[:title][0] %></span>
  <% end %>
</p>
<p>
  <%= f.label :image %>
　<%= image_tag @post.image.url, class:'image-size' if @post.image? %>
　<%= f.file_field :image %>
　<%= f.hidden_field :image_cache %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
