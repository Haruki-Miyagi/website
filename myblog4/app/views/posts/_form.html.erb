<%= form_for @post do |f| %>

  <p>
    <%= f.text_field :title, placeholder: 'enter title' %>
    <% if @post.errors.messages[:title].any? %>
      <span class='errors'>
        <%= @post.errors.messages[:title][0] %>
      </span class='errors'>
    <% end %>
  </p>
  <p>
    <%= f.text_area :body, placeholder: 'enter body' %>
    <% if @post.errors.messages[:body].any? %>
      <span class='errors'>
        <%= @post.errors.messages[:body][0] %>
      </span class='errors'>
    <% end %>
  </p>
  <p><%= f.submit value:'Save Post' %></p>
<% end %>
