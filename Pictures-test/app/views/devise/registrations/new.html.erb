<div class="registration-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="log-in panel">
          <div class="panel-heading">
            <h2>Create Your Account</h2>
          </div>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
            <div class="panel-body">
              <%= f.input :email, required: true, autofocus: true, placeholder: 'email', input_html: {class: 'input-lg'} %>
              <%= f.input :user_name, required: true, placeholder: 'UserName', input_html: {class: 'input-lg'} %>
              <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: 'Password', input_html: {class: 'input-lg'} %>
              <%= f.input :password_confirmation, required: true %>
              <%= f.button :submit, "Sign up", class: 'btn-lg btn-info btn-block' %>

            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
