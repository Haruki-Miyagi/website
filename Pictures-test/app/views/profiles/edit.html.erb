<div class="posts-wrapper row" >
    <div class="post">
        <div class="post-head">
            <div class="post-body">
              <%= form_for @user, url: {action: "update"}, html: {multipart: true} do |f| %>
              <div class="row">
                <div class="col-md-12">
                  <div class="text-count-post">
                    <h4>Posts Count: <%= pluralize @user.posts.count, 'post' %></h4>
                  </div>
                  <div class="form-group text-center" >
                    <h4>Change Your Profile image: </h4>
                    <%= profile_avatar_select(@user) %>
                  </div>
                  <%= f.file_field :avatar, onChange: 'loadFile(event)', class: 'text-center text-align' %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group text-center" >
                    <h4>Update Your bio: </h4>
                    <%= f.text_area :bio, rows: 5, cols: 50 %>
                  </div>
                </div>
              </div>
              <div class="form-group text-center">
                <%= f.submit 'UpdateProfile', class: 'btn btn-success' %>
              </div>
              <% end %>
            </div>
        </div>
    </div>
</div>
