<div class="posts-wrapper row" >
    <% @posts.each do |post| %>
      <div class="post">
          <div class="post-head">
              <div class="name">
                  Bluelime Learning Solutions
              </div>
          </div>
          <div class="image center-block">
              <%= link_to (image_tag post.image.url(:medium)),post_path(post) %>
          </div>
          <p class="title">
              <%= post.title %>
          </p>
      </div>
    <% end %>
</div>
